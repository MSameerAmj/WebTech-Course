<div class="edit-container">
    <h2>Edit Product</h2>
    <img src="../uploads/<%= product.images[0] %>" alt="<%= product.images[0] %>">
    <form action="/admin/edit-product/<%= product._id %>" method="POST">
      <input type="text" name="name" value="<%= product.name %>" required>
      <input type="number" name="price" value="<%= product.price %>" required>

      <button type="submit">Save</button>
    </form>

    <form action="/admin/delete-product/<%= product._id %>" method="POST" style="margin-top: 10px;">
      <button type="submit" style="background-color: rgb(0, 0, 0); color: white;">Delete</button>
    </form>
  </div>